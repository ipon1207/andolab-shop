{
    "name": "andolab-shop",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:frontend": "npm run dev -w @andolab-shop/frontend",
        "dev:backend": "npm run dev -w @andolab-shop/backend",
        "build": "npm run build --workspaces --if-present",
        "start": "node packages/backend/dist/index.js",
        "db:generate": "npm run generate -w @andolab-shop/db-schema",
        "db:migrate": "npm run migrate -w @andolab-shop/db-schema",
        "db:seed": "npm run seed -w @andolab-shop/db-schema",
        "db:studio": "npm run studio -w @andolab-shop/db-schema",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.47.0"
    },
    "lint-staged": {
        "packages/**/*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,css}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "drizzle-kit": "^0.31.7",
        "drizzle-orm": "^0.44.7"
    }
}
