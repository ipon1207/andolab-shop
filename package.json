{
    "name": "andolab-shop",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:frontend": "npm run dev -w @andolab-shop/frontend",
        "dev:backend": "npm run dev -w @andolab-shop/backend",
        "build": "npm run build --workspaces --if-present",
        "start": "node packages/backend/dist/index.js",
        "db:generate": "npm run generate -w @andolab-shop/db-schema",
        "db:migrate": "npm run migrate -w @andolab-shop/db-schema",
        "db:seed": "npm run seed -w @andolab-shop/db-schema",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.46.4",
        "@typescript-eslint/parser": "^8.46.4",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2"
    }
}
